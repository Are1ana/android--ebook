<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="#3C3C3C"

    >
    <LinearLayout
        android:id="@+id/poplin"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="0dp"
                android:id="@+id/color_g"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:background="@drawable/color_gback"
                />
            <TextView
                android:id="@+id/color_b"
                android:layout_marginLeft="20dp"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:background="@drawable/color_bback"
                />
            <TextView
                android:id="@+id/color_y"
                android:layout_marginLeft="20dp"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:background="@drawable/color_yback"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>